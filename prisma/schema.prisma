// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int @id @default(autoincrement())
  email       String @unique
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  credentials Credential[]
  notes      Note[]
  cards     Card[]
  networks  Network[]

  @@map("users")
}

model Credential {
  id          Int @id @default(autoincrement())
  url         String
  title       String
  username    String
  password    String
  user_id     Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  user       User @relation(fields: [user_id], references: [id])

  @@map("credentials")
}

model Note {
  id          Int @id @default(autoincrement())
  title       String @db.VarChar(50)
  content     String @db.VarChar(1000)
  user_id     Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  user       User @relation(fields: [user_id], references: [id])

  @@map("notes")
}

model Card {
  id          Int @id @default(autoincrement())
  number      String
  expiry      String
  cvv         String
  password    String
  is_virtual  Boolean
  type        card_types
  user_id     Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  user       User @relation(fields: [user_id], references: [id])

  @@map("cards")
}

model Network {
  id          Int @id @default(autoincrement())
  name        String
  password    String
  label       String
  user_id     Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  user       User @relation(fields: [user_id], references: [id])

  @@map("networks")
}

enum card_types {
  CREDIT
  DEBIT
  BOTH
}